<%- include('../common/header') %>
    <%- include('../common/menu')%>
    <main class="mb-4">
        <div class="bg-light p-5 mb-4">
            <div class="container text-center">
                <h1>Notícias</h1>                
            </div>
        </div>
        <div class="container">
            <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
                <% noticias.forEach(noticia =>{ %>
                    <!-- console.log(noticia) -->
                    <div class="col">
                        <div class="card shadow-sm">
                            <div class="card-body">
                                <h5 class="card-title"><%= noticia.titulo %></h5>
                                <p class="card-text"><%= noticia.conteudo.substring(0,50) %>...</p><!--Substring para cortar e ter apenas os 50 primeiros caracteres-->
    
                                <p class="card-text">
                                    <small class="text-muted">
                                        <%= noticia.data_criacao.toLocaleString('pt-BR').split(' ').join(' às ') %>
                                        <!-- split para separar pelo caractere indicado, no caso o espaço, e o join para preencher o espaço-->
                                    </small>
                                </p>
                                <a href="" class="btn btn-primary">Saiba Mais</a>
                            </div>
                        </div>
                    </div>

                <% }) %>
                
            </div>
        </div>
    </main>
<%- include('../common/footer')%>